{
    "trailingComma": "es5",
    "tabWidth": 4,
    "useTabs": false,
    "printWidth": 140,
    "overrides": [
      {
        "files": "*.ts",
        "options": {
          "parser": "typescript",
          "trailingComma": "all",
          "arrowParens": "always",
          "singleQuote": true
        }
      },
      {
        "files": "*.sol",
        "options": {
          "printWidth": 100,
          "bracketSpacing": true,
          "explicitTypes": "always"
        }
      }
    ]
  }
